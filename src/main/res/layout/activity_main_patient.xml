<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shivanika.health.admin_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="#B2DFDB"
            android:text="Doctors Available" />

        <ImageView android:src="@drawable/doc2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="4dp"
            android:background="#FFFFFF"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="#B2DFDB"
            android:text=" Records " />

        <ImageView android:src="@drawable/record2"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:padding="4dp"
            android:background="#FFFFFF"
            android:layout_gravity="center_horizontal" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="#B2DFDB"
            android:text="Pharmacy" />

        <ImageView android:src="@drawable/med2"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:padding="4dp"
            android:background="#FFFFFF"
            android:layout_gravity="center_horizontal" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="#B2DFDB"
            android:text=" Pathology " />


        <ImageView android:src="@drawable/lab3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#FFFFFF"
            android:layout_padding="2dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="#B2DFDB"
            android:text="Available Clinics" />



        <ImageView android:src="@drawable/map2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#000000"
            android:layout_padding="2dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>


</ScrollView>
