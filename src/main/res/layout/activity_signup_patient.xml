<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:fitsSystemWindows="true"
    tools:context="com.example.shivanika.health.signup_patient">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your details for successful login"
        android:id="@+id/label"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/abc_background_cache_hint_selector_material_dark" />




    <EditText
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/label"
            android:layout_alignParentStart="true"
            android:hint="Name"
            android:typeface="sans" />

    <EditText
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/address"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true"
        android:hint="Address"
        android:typeface="sans" />

    <EditText
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:id="@+id/contact"
        android:layout_below="@+id/address"
        android:layout_alignEnd="@+id/address"
        android:hint="Contact"
        android:typeface="sans" />

    <EditText
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:id="@+id/email"
        android:layout_below="@+id/contact"
        android:layout_alignEnd="@+id/contact"
        android:hint="Email"
        android:typeface="sans" />

    <EditText
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dob"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:hint="Date Of Birth(YY/MM/DD)"
        android:typeface="sans" />

    <EditText
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/dob"
        android:id="@+id/password"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:hint="Enter Password"
        android:typeface="sans" />

    <EditText
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/cp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true"
        android:hint="Confirm Password"
        android:typeface="sans" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="SUbmit"
        android:textColor="#ffffff"
        android:id="@+id/submit"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/cp"
        android:background="#4caf50" />



</RelativeLayout>
